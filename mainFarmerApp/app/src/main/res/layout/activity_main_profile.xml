<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainProfile"
    android:background="@drawable/background_ui"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_mainProfile"
        android:layout_width="148dp"
        android:layout_height="139dp"
        android:layout_margin="8dp"

        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/Name_mainProfile"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Name" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_margin="8dp"
        android:inputType="textPersonName" />

    <TextView

        android:id="@+id/AadharNo_mainProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:layout_margin="8dp"

        android:hint="Aadhar Number" />

    <TextView
        android:id="@+id/AadharText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_margin="8dp"
        android:inputType="number" />


    <TextView
        android:id="@+id/MobileNo_mainProfile"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:hint="Mobile Number" />

    <TextView
        android:id="@+id/mobileText"
        android:layout_width="match_parent"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:inputType="phone" />


    <TextView
        android:id="@+id/address_mainProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Address"
        android:text="Address" />

    <TextView
        android:id="@+id/addressText"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        />

    <Button
        android:id="@+id/button_mainProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:background="@drawable/farmer_ui"
        android:hint="To edit your info."
        android:text="Edit"
        />


    <TextView
        android:id="@+id/actionLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:text="Do you want to LogOut?" />
</LinearLayout>
